{
  "compileOnSave": false,
  "include": ["./src/**/*", "./src/*" ],
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@rx/*": [
          "packages/@rx/*"
      ]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
